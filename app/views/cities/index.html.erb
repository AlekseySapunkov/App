<p style="color: green"><%= notice %></p>

<h1>Cities</h1>

<div id="cities">
  <% @cities.each do |city| %>
    <%= render city %>
    <p>
      <%= link_to "Show this city", [@country, @region, city] %>
    </p>
    <p>
    <%= link_to "Back to region", [@country,@region] %>
  </p>
  <% end %>
</div>

<%= link_to "New city", new_country_region_city_path(@country) %>
