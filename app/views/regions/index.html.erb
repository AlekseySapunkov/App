<h1>Regions</h1>

<div id="regions">
  <% @regions.each do |region| %>
    <%= render region %>
    <div>
      <%= link_to "Show this region",[@country, region] %> 
    </div>
    <p><%= link_to 'Show Country', [@country] %></p>
  <% end %>
</div>

