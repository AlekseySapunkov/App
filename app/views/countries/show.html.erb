<p style="color: green"><%= notice %></p>

<%= render @country %>

<div>
  <%= link_to 'Add Region', country_regions_path(@country) %> |
  <%= link_to "Edit this country", edit_country_path(@country) %> |
  <%= link_to "Back to countries", countries_path %>

  <%= button_to "Destroy this country", @country, method: :delete %>
  <h2>Regions </h2> 
  <% for region in @country.regions %>
  
  <ul>
  
  <li><%= link_to region.name, [@country, region] %></li>
  
  </ul>
  
  <% end %>
</div>
